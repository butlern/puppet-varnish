# ************************************************************
# Probe
# ************************************************************
probe backend_health_check {
    .url = "<%= @health_check_url %>";
    .url = "/ping.txt"
    .timeout = <%= @health_check_timeout %>;
    .timeout = 300ms;
    .interval = <%= @health_check_interval %>;
    .interval = 1s;
    .window = <%= @health_check_window %>;
    .window = 10;
    .threshold = <%= @health_check_threshold %>;
    .threshold = 6;
    .expected_response = <%= @health_check_expected_response %>;
    .expected_response = 200;
}

# ************************************************************
# Backends
# ************************************************************
<%
  hosts = @backends
  backends = hosts.map do |host|
    if host =~ /:/
      host.split(':')
    else
      [ host, '80' ]
    end
  end
  backends.enum_with_index do |v,i|
-%>
backend backend<%= i %> {
    .host = "<%= v[0] %>";
    .port = "<%= v[1] %>";
    .first_byte_timeout = <%= @first_byte_timeout %>;
# This backend is used for saint mode. Unless you know what you're doing
# DO NOT REMOVE
}
<% end -%>

# ************************************************************
# Saint Mode Backend
# https://www.varnish-software.com/static/book/Saving_a_request.html#example-evil-backend-hack
# ************************************************************
backend fail { .host = "127.0.0.1"; .port = "12871"; .probe = backend_health_check; }

# ************************************************************
# Director
# ************************************************************
director default round-robin {
<% backends.each_index do |i| -%>
    { .backend = backend<%= i %>; }
<% end -%>
}

# ************************************************************
# Purge Acls, host/networks allowed to purge content.
# ************************************************************
acl purge {
<% @purge_acls.each do |acl| -%>
    <%= acl %>;
<% end -%>
}

# ************************************************************
# Vmod Imports
# ************************************************************
import std;
<%
  @vmods.map! do |vmod|
    vmod.gsub(/libvmod-(.+)/, '\1')
  end
-%>
<% @vmods.each do |vmod| -%>
import <%= vmod %>;
<% end -%>

# ************************************************************
# Core Config
# ************************************************************
include "<%= @subs_vcl.split('/').last %>";
